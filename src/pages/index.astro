		<script>
			const closeBtn = document.querySelector('[data-banner-close]');
			const banner = document.querySelector('[data-banner]');
			const bannerInner = document.querySelector('[data-banner-inner]');
			if (closeBtn && banner && bannerInner) {
				closeBtn.addEventListener('click', () => {
					bannerInner.style.maxHeight = '0px';
					bannerInner.style.paddingTop = '0px';
					bannerInner.style.paddingBottom = '0px';
					bannerInner.style.opacity = '0';
					const handle = () => banner.remove();
					bannerInner.addEventListener('transitionend', handle, { once: true });
				});
			}

			const nav = document.querySelector('[data-nav]');
			const updateNav = () => {
				if (!nav) return;
				if (window.scrollY > 8) {
					nav.classList.add('nav-scrolled');
				} else {
					nav.classList.remove('nav-scrolled');
				}
			};
			updateNav();
			window.addEventListener('scroll', updateNav, { passive: true });

			const mobileMenu = document.querySelector('[data-mobile-menu]');
			const mobilePanel = document.querySelector('[data-mobile-panel]');
			const mobileBackdrop = document.querySelector('[data-mobile-backdrop]');
			const mobileToggle = document.querySelector('[data-mobile-toggle]');
			const mobileClose = document.querySelector('[data-mobile-close]');

			const openMobileMenu = () => {
				if (!mobileMenu || !mobilePanel || !mobileBackdrop) return;
				mobileMenu.classList.remove('hidden');
				requestAnimationFrame(() => {
					mobilePanel.style.transform = 'translateX(0)';
					mobileBackdrop.classList.add('opacity-100');
				});
				document.body.style.overflow = 'hidden';
				mobileToggle?.setAttribute('aria-expanded', 'true');
			};

			const closeMobileMenu = () => {
				if (!mobileMenu || !mobilePanel || !mobileBackdrop) return;
				mobilePanel.style.transform = 'translateX(100%)';
				mobileBackdrop.classList.remove('opacity-100');
				const handle = () => {
					mobileMenu.classList.add('hidden');
					mobilePanel.removeEventListener('transitionend', handle);
				};
				mobilePanel.addEventListener('transitionend', handle);
				document.body.style.overflow = '';
				mobileToggle?.setAttribute('aria-expanded', 'false');
			};

			mobileToggle?.addEventListener('click', openMobileMenu);
			mobileClose?.addEventListener('click', closeMobileMenu);
			mobileBackdrop?.addEventListener('click', closeMobileMenu);
			window.addEventListener('keydown', (event) => {
				if (event.key === 'Escape') closeMobileMenu();
			});
		</script>
